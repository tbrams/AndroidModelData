<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:text="Trip Name"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/tripNameText"/>

    <TextView
        android:text="dd/mm/yyyy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tripNameText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/tripDateText"/>

    <TextView
        android:text="dist nm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tripDistText"
        android:layout_marginRight="16dp"
        android:layout_below="@id/tripNameText"
        android:layout_toLeftOf="@+id/tripDateText"
        android:layout_toStartOf="@+id/tripDateText"
        android:layout_marginEnd="16dp"/>

</RelativeLayout>